  .post .writing-vertical {
    writing-mode: vertical-rl;
    font-family: serif;
    font-size: 1em;
    margin: 1.5em 0;
    column-count: 2;
    max-width: 800px;
    width: 102%;
    overflow: auto;
    height: 800px;
  }

  .post .writing-vertical p {
    margin: 0;
  }

  /*
  .post .writing-vertical p a {
    padding-left: 0px;
    padding-top: 24px;
  }
  */

  .post .writing-vertical p:first-letter {
    margin-top: 1em;
  }

  .post .writing-vertical .link-icon {
    background-position-x: center;
    background-position-y: 5px;
  }

  .post .writing-vertical blockquote {
    border: none;
    margin: 0 0.5em;
    padding: 1em 0.5em;
    background: #f0f0f0;
  }

  @media screen and (max-width: 730px) {
    .container {
      width: 100%;
      box-sizing: border-box;
    }

    .post .writing-vertical {
      margin-left: 0;
      margin-right: 0;
      width: 100%;
    }

    .header__feature img {
      max-width: 100%;
      height: auto;
    }
  }
  .profile {
    border: 1px solid #ddd;
    padding: 1em;
    margin-top: 2em;
    color: #444;
  }

  .profile__heading {
    margin-bottom: 0.3em;
    margin-top: 0;
    border-bottom: 1px dashed #ddd;
    display: inline-block;
    font-weight: normal;
    font-family: Garamond, "Times New Roman", serif;
  }

  .profile__image {
    float: left;
    margin-right: 6px;
  }

  .profile__content {
    overflow: hidden;
    font-family: Garamond, "Times New Roman", serif;
    line-height: 1.5em;
    color: #666;
  }

  .profile__social-list {
    margin: 0.5em 0 0 0;
    padding: 0;
    list-style-type: none;
  }

  .profile__social-list-item {
    display: inline;
    margin-right: 0.5em;
  }

  .amazon-book-list {
    margin-top: 2em;
  }

  .amazon-book-list ul {
    list-style-type: none;
    margin: 0;
    padding: 0;
    display: table;
    width: 100%;
  }

  .amazon-book-list li {
    display: table-cell;
    padding: 10px;
    font-size: 0.875em;
    line-height: 1.5;
  }

  .amazon-book-list li a {
    color: #666;
  }

  .amazon-book-list li img {
    display: block;
  }

  .amazon-book-list-3 li {
    width: 33%;
  }

  .amazon-book-list-4 li {
    width: 25%;
  }

  .amazon-book-list-5 li {
    width: 20%;
  }

  .content hr {
    border-top-width: 0;
    border-bottom-width: 1;
    border-style: solid;
    border-color: #ddd;
    margin-top: 4em;
  }

  .pagination {
    display: flex;
    flex: 0 0 auto;
    align-items: center;
    flex-wrap: wrap;
    margin: 0 -5px;
  }

  .page-number,
  .extend.next,
  .extend.prev,
  .pagination .space {
    min-width: 59px;
    min-height: 59px;
    text-align: center;
    line-height: 59px;
    margin: 5px;
    border: 1px solid #ddd;
    border-radius: 4px;
    background: white;
  }

  .pagination .space {
    border-color: transparent;
  }

  .page-number.current {
    font-weight: bold;
  }

