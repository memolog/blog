body {
  background-color: white;
  color: black;
  font-family: 'Hiragino Kaku Gothic Pro',  YuGothic, 'Yu Gothic', sans-serif;
  margin: 0;
  padding: 0;
}

a {
  color: darkred;
}

a:visited {
  color: rebeccapurple;
}

.header {
  margin: 0 auto;
  font-family: Garamond, 'Times New Roman', serif; }

.header_component_global {
  text-align: center;
  margin: 1em 0;
}

.header__title {
  display: inline-block;
  background-color: #f5f2f0;
  margin: .5em 0 .2em;
  padding: 5px;
  font-size: 1.8em;
  font-weight: normal;
}

.header__title a {
  color: black;
  text-decoration: none;
}

.header_component_global .header__title {
  font-size: 1.2em;
}

.header_component_global .header__title a {
  text-decoration: none;
  color: black;
}

.header__description {
  margin-top: 0;
  margin-bottom: 1em; }

.header_component_global .header__description {
  color: #666;
  margin: 0 auto;
  padding: 0 5px; }

.header__epigraph {
  font-style: italic;
  color: #666;
  margin: 0 auto;
  padding: 5px; }

.container {
  max-width: 750px;
  margin: 0 auto 4em;
  padding: 0 15px;
  border-radius: 3px;
}

.content {
  font-size: 1.1em;
  line-height: 2em;
  color: #444;
  -webkit-font-smoothing: antialiased;
}

.content h2 {
  font-size: 1.4em;
  margin: 2em 0 0 0;
  border-bottom: 1px solid #ddd;
}

.article-summary {
  margin-bottom: 3.5em;
}

.header time, .article__author {
  display: inline-block;
  font-size: .9125em;
  color: #666;
  border-bottom: 1px dashed #bababa;
}

.article__author {
  margin-left: .5em;
}

.calendar-icon, .author-icon {
  margin-right: .5em;
}

.content blockquote {
  border-left: 5px solid #ddd;
  margin: 0;
  padding: 0 1em;
}

.content p > code {
  background-color: #f5f2f0;
  display: inline-block;
  padding: 0 6px;
  border-radius: .3em;
  color:#444;
}

.content code[class*="language-"] {
  color: #444;
}

@media screen and (max-width: 500px) {
  .header__epigraph {
    display: none;
  }

  .header__title {
    font-size: 1.2em;
  }

  .content h2 {
    font-size: 1.2em;
  }

  .content {
    font-size: 1em;
  }
}

.header__feature {
  margin: .5em 0 -.5em;
}

.header__feature img {
  max-width: 100%;
  overflow: hidden;
}

.featured__image {
  background: white;
  line-height: 0;
}

.featured__credit {
  color: #666;
  font-size: .825em;
  text-align: right;
  margin-top: .5em;
}

.content p a {
  padding-left: 24px;
}

.lazyload,
.lazyloading {
	opacity: 0.5;
}

.lazyloaded {
	opacity: 1;
	transition: opacity 2s .3s cubic-bezier(.3,.18,.15,1);
}

.content img {
  max-width: 100%;
}

@media screen and (max-width: 780px) {
  .featured__image,
  .content__image,
  .content pre[class*="language-"] {
    margin: 0 -15px;
  }
}
